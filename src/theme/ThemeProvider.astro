---
/**
 * THEME PROVIDER
 *
 * Simplified theme toggle component.
 * Manages light/dark theme switching with localStorage persistence.
 */

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`theme-toggle ${className}`} id="theme-toggle">
  <button
    class="theme-toggle-button"
    aria-label="Toggle theme"
    title="Toggle between light and dark theme"
    id="theme-toggle-button"
  >
    <span class="theme-icon theme-icon-light">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="5"></circle>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
      </svg>
    </span>
    <span class="theme-icon theme-icon-dark">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
      </svg>
    </span>
  </button>
</div>

<style>
  .theme-toggle {
    position: fixed;
    bottom: var(--spacing-4);
    right: var(--spacing-4);
    z-index: var(--z-fixed);
  }

  .theme-toggle-button {
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-full);
    padding: var(--spacing-3);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base) var(--easing-ease);
    color: var(--color-text-primary);
  }

  .theme-toggle-button:hover {
    transform: scale(1.1);
    box-shadow: var(--shadow-lg);
  }

  .theme-toggle-button:active {
    transform: scale(0.95);
  }

  .theme-icon {
    display: none;
    transition: opacity var(--transition-base) var(--easing-ease);
  }

  .theme-icon-light {
    display: block;
  }

  .theme-icon-dark {
    display: none;
  }

  /* Show dark icon when in dark mode */
  :global(.dark) .theme-icon-light {
    display: none;
  }

  :global(.dark) .theme-icon-dark {
    display: block;
  }

  @media (max-width: 640px) {
    .theme-toggle {
      bottom: var(--spacing-3);
      right: var(--spacing-3);
    }

    .theme-toggle-button {
      padding: var(--spacing-2-5);
    }
  }
</style>

<script>
  // Simple theme toggle functionality
  const button = document.getElementById('theme-toggle-button');
  const html = document.documentElement;

  // Get current theme from DOM class
  function getCurrentTheme() {
    return html.classList.contains('dark') ? 'dark' : 'light';
  }

  // Set theme
  function setTheme(theme: 'light' | 'dark') {
    html.classList.remove('light', 'dark');
    html.classList.add(theme);
    localStorage.setItem('theme', theme);
  }

  // Toggle theme
  function toggleTheme() {
    const current = getCurrentTheme();
    setTheme(current === 'light' ? 'dark' : 'light');
  }

  // Attach event listener
  button?.addEventListener('click', toggleTheme);
</script>
