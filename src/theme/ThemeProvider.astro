---
/**
 * THEME PROVIDER
 *
 * Theme toggle component for inline header placement.
 * Manages system/light/dark theme switching with localStorage persistence.
 */

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`theme-toggle ${className}`} id="theme-toggle">
  <button
    class="theme-toggle-button"
    aria-label="Toggle theme"
    title="Toggle theme"
    id="theme-toggle-button"
  >
    <span class="theme-icon theme-icon-light">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="5"></circle>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
      </svg>
    </span>
    <span class="theme-icon theme-icon-dark">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
      </svg>
    </span>
    <span class="theme-icon theme-icon-system">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
        <line x1="8" y1="21" x2="16" y2="21"></line>
        <line x1="12" y1="17" x2="12" y2="21"></line>
      </svg>
    </span>
  </button>
</div>

<style>
  .theme-toggle {
    display: flex;
    align-items: center;
  }

  .theme-toggle-button {
    background-color: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-full);
    padding: 0.5rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text);
    transition: all 0.15s ease;
  }

  .theme-toggle-button:hover {
    border-color: var(--accent);
    background-color: var(--surface-2);
  }

  .theme-toggle-button:focus-visible {
    outline: 2px solid var(--focus);
    outline-offset: 2px;
  }

  .theme-icon {
    display: none;
    transition: opacity 0.15s ease;
  }

  /* Show light icon by default */
  .theme-icon-light {
    display: block;
  }

  /* Show dark icon when in dark mode */
  :global(.dark) .theme-icon-light {
    display: none;
  }

  :global(.dark) .theme-icon-dark {
    display: block;
  }

  /* Show system icon when in system mode */
  :global([data-theme="system"]) .theme-icon-light {
    display: none;
  }

  :global([data-theme="system"]) .theme-icon-system {
    display: block;
  }
</style>

<script>
  // Theme toggle functionality with system mode
  const button = document.getElementById('theme-toggle-button');
  const html = document.documentElement;

  type ThemeMode = 'system' | 'light' | 'dark';

  // Get current theme mode from localStorage
  function getThemeMode(): ThemeMode {
    const stored = localStorage.getItem('theme');
    if (stored === 'system' || stored === 'light' || stored === 'dark') {
      return stored;
    }
    return 'system'; // default
  }

  // Set theme mode and apply to DOM
  function setTheme(mode: ThemeMode) {
    localStorage.setItem('theme', mode);
    html.setAttribute('data-theme', mode);

    const effectiveTheme = mode === 'system'
      ? (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light')
      : mode;

    html.classList.remove('light', 'dark');
    html.classList.add(effectiveTheme);
  }

  // Toggle through modes: system -> light -> dark -> system
  function toggleTheme() {
    const currentMode = getThemeMode();
    const nextMode: ThemeMode = currentMode === 'system' ? 'light' : currentMode === 'light' ? 'dark' : 'system';
    setTheme(nextMode);
  }

  // Listen for system theme changes
  const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');
  mediaQuery.addEventListener('change', () => {
    const mode = getThemeMode();
    if (mode === 'system') {
      setTheme('system');
    }
  });

  // Initialize theme on load
  setTheme(getThemeMode());

  // Attach event listener
  button?.addEventListener('click', toggleTheme);
</script>
