---
import Layout from '../layouts/Layout.astro';  // ensure this path is correct
---

<Layout title="CV - Hamish Burke">
  <main>
    <article>
      <h1>Curriculum Vitae</h1>
      <div class="pdf-container">
        <iframe
          src="/cv.pdf"
          width="100%"
          height="800px"
          style="border: none;"
        />
        <p>Your browser does not support PDFs.</p>
        <a href="/cv.pdf">Download the PDF</a>
      </div>
    </article>
  </main>
</Layout>

<style>
  .pdf-container {
    max-width: 100%;
    margin: 2rem auto;
  }
</style>
