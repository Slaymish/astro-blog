---
import Layout from '../components/Layout.astro';
---

<Layout title="Curriculum Vitae">
  <main>
    <article>
      <header class="cv-header">
        <h1>Curriculum Vitae</h1>
        <p class="cv-description">
          My professional background, experience, and qualifications.
        </p>
      </header>
      
      <div class="pdf-container">
        <iframe 
          src="/cv.pdf"
          width="100%"
          height="800px"
          title="Curriculum Vitae"
        >
          <p>Your browser does not support PDFs. 
            <a href="/cv.pdf">Download the PDF</a>
          </p>
        </iframe>
      </div>
      
      <div class="cv-actions">
        <a href="/cv.pdf" download class="download-btn">
          Download CV
        </a>
        <a href="/" class="back-btn">
          ‚Üê Back to Home
        </a>
      </div>
    </article>
  </main>
</Layout>

<style>
  .cv-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #eee;
  }
  
  .cv-description {
    font-size: 1.1rem;
    margin: 1rem 0;
    color: #666;
  }
  
  .pdf-container {
    margin: 2rem 0;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .pdf-container iframe {
    display: block;
    border: none;
  }
  
  .cv-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
  }
  
  .download-btn, .back-btn {
    padding: 0.5rem 1rem;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
  }
  
  .download-btn {
    background: #0066cc;
    color: white;
  }
  
  .back-btn {
    background: #f0f0f0;
    color: #333;
  }
  
  .download-btn:hover {
    background: #0052a3;
  }
  
  .back-btn:hover {
    background: #e0e0e0;
  }
</style>
