---
import { getCollection } from 'astro:content';
import Layout from '../../components/Layout.astro';

export async function getStaticPaths() {
  const reports = await getCollection('reports');
  return reports.map((report) => ({
    params: { slug: report.id },
    props: { report },
  }));
}

const { report } = Astro.props;
const { data } = report;
---

<Layout title={data.title}>
  <main>
    <article>
      <header class="report-header">
        <h1>{data.title}</h1>
        <p class="report-date">
          {new Date(data.date).toLocaleDateString()}
        </p>
        <p class="report-description">
          {data.description}
        </p>
        {data.tags && (
          <div class="tags">
            {data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </header>
      
      <div class="pdf-container">
        <iframe 
          src={data.pdfPath}
          width="100%"
          height="800px"
          title={data.title}
        >
          <p>Your browser does not support PDFs. 
            <a href={data.pdfPath}>Download the PDF</a>
          </p>
        </iframe>
      </div>
      
      <div class="report-actions">
        <a href={data.pdfPath} download class="download-btn">
          Download PDF
        </a>
        <a href="/" class="back-btn">
          ‚Üê Back to Home
        </a>
      </div>
    </article>
  </main>
</Layout>

<style>
  .report-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #eee;
  }
  
  .report-date {
    color: #666;
    margin: 0.5rem 0;
  }
  
  .report-description {
    font-size: 1.1rem;
    margin: 1rem 0;
  }
  
  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }
  
  .tag {
    background: #f0f0f0;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
  }
  
  .pdf-container {
    margin: 2rem 0;
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .pdf-container iframe {
    display: block;
    border: none;
  }
  
  .report-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
  }
  
  .download-btn, .back-btn {
    padding: 0.5rem 1rem;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
  }
  
  .download-btn {
    background: #0066cc;
    color: white;
  }
  
  .back-btn {
    background: #f0f0f0;
    color: #333;
  }
  
  .download-btn:hover {
    background: #0052a3;
  }
  
  .back-btn:hover {
    background: #e0e0e0;
  }
</style>
