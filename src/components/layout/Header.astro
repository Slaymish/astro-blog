---
import ThemeProvider from '../../theme/ThemeProvider.astro';
import AccentPicker from '../theme/AccentPicker.astro';
---

<header class="header">
  <div class="header-container">
    <nav class="nav" aria-label="Main navigation">
      <!-- Site Title -->
      <a
        href="/"
        class="site-title"
        aria-label="Hamish - Home"
        aria-current={Astro.url.pathname === '/' ? 'page' : undefined}
      >
        Hamish
      </a>

      <!-- Navigation Links -->
      <div class="nav-links">
        <a href="/projects" class="nav-link" aria-current={Astro.url.pathname === '/projects' ? 'page' : undefined}>Projects</a>
        <a href="/writing" class="nav-link" aria-current={Astro.url.pathname === '/writing' ? 'page' : undefined}>Writing</a>
        <a href="/reading" class="nav-link" aria-current={Astro.url.pathname === '/reading' ? 'page' : undefined}>Reading</a>
        <a href="/about" class="nav-link" aria-current={Astro.url.pathname === '/about' ? 'page' : undefined}>About</a>
      </div>

      <!-- Theme Controls -->
      <div class="theme-controls">
        <AccentPicker />
        <ThemeProvider />
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    width: 100%;
    border-bottom: 1px solid var(--border);
  }

  .header-container {
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: var(--padding-mobile);
  }

  @media (min-width: 768px) {
    .header-container {
      padding: var(--padding-tablet);
    }
  }

  @media (min-width: 1024px) {
    .header-container {
      padding: var(--padding-desktop);
    }
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .site-title {
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--text);
    text-decoration: none;
    letter-spacing: -0.025em;
    transition: color 0.15s ease;
  }

  .site-title:hover {
    color: var(--accent);
  }

  .nav-links {
    display: none;
    align-items: center;
    gap: 2rem;
  }

  @media (min-width: 640px) {
    .nav-links {
      display: flex;
    }
  }

  .nav-link {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.15s ease;
    position: relative;
  }

  .nav-link:hover,
  .nav-link[aria-current="page"] {
    color: var(--accent);
  }

  .nav-link[aria-current="page"]::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 2px;
    background-color: var(--accent);
  }

  .theme-controls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* Mobile menu button (could be added later if needed) */
  @media (max-width: 639px) {
    .nav-links {
      display: none;
    }
  }
</style>
