---
import InteractiveTorch from '../interactive/InteractiveTorch.astro';
---

<header class="max-w-3xl mx-auto pt-6 pb-8 sm:pt-8 sm:pb-12">
  <nav class="flex justify-between items-center" aria-label="Main navigation">
    <a
      href="/"
      class="site-title text-xl font-bold transition-all"
      style="color: var(--color-text-primary);"
      aria-label="Hamish's Blog - Home"
    >
      <span class="site-icon" aria-hidden="true">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <rect x="2" y="2" width="10" height="20" rx="2" fill="#4c5270"/>
          <rect x="12" y="2" width="10" height="20" rx="2" fill="#4c5270"/>
          <rect x="8" y="10" width="8" height="4" rx="1" fill="#f652a0"/>
        </svg>
      </span>
      <span>Hamish's Blog</span>
    </a>

    <!-- Desktop Navigation Links -->
    <div class="hidden md:flex items-center gap-4">
      <a
        href="/#reports"
        class="nav-link"
        style="color: var(--color-text-secondary);"
      >
        Reports
      </a>
      <a
        href="/#posts"
        class="nav-link"
        style="color: var(--color-text-secondary);"
      >
        Posts
      </a>
      <a
        href="/about"
        class="nav-link"
        style="color: var(--color-text-secondary);"
      >
        About
      </a>
      <a
        href="/cv"
        class="nav-link hidden lg:inline-block"
        style="color: var(--color-text-secondary);"
      >
        CV
      </a>
    </div>

    <!-- Social Media Icons with Torch -->
    <div class="flex items-center gap-2">
      <!-- GitHub -->
      <a
        href="https://github.com/Slaymish"
        target="_blank"
        rel="noopener noreferrer"
        class="social-icon"
        aria-label="Visit Hamish's GitHub Profile"
        title="GitHub"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>

      <!-- LinkedIn -->
      <a
        href="https://www.linkedin.com/in/hamish-burke-2301669a"
        target="_blank"
        rel="noopener noreferrer"
        class="social-icon"
        aria-label="Connect with Hamish on LinkedIn"
        title="LinkedIn"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </a>

      <!-- Interactive Torch (hidden on smaller screens) -->
      <div class="social-icon-wrapper hidden lg:flex">
        <InteractiveTorch />
      </div>
    </div>
  </nav>
</header>

<style>
  .nav-link {
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s ease;
    position: relative;
    padding: 0.375rem 0;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-primary-500);
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: var(--color-primary-500) !important;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link:focus-visible {
    outline: 2px solid var(--color-primary-500);
    outline-offset: 4px;
    border-radius: 2px;
  }

  .social-icon {
    color: var(--color-text-muted);
    transition: all 0.2s ease;
    padding: 0.375rem;
    border-radius: 0.375rem;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .social-icon:hover {
    color: var(--color-primary-500);
  }

  .social-icon:focus-visible {
    outline: 2px solid var(--color-primary-500);
    outline-offset: 2px;
  }

  .social-icon svg {
    width: 18px;
    height: 18px;
  }

  /* Responsive behavior */
  @media (max-width: 640px) {
    .social-icon {
      padding: 0.375rem;
    }

    .social-icon svg {
      width: 16px;
      height: 16px;
    }
  }

  .social-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 40px;
  }

  .site-title {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    letter-spacing: -0.025em;
  }

  .site-title:hover {
    color: var(--color-primary-500);
  }

  .site-icon {
    width: 1.5rem;
    height: 1.5rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.25rem;
    border: 1px solid var(--color-border-primary);
    transition: all 0.2s ease;
  }

  .site-title:hover .site-icon {
    border-color: var(--color-primary-500);
    transform: translateY(-1px);
  }

  .site-icon svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  :global(.dark) .site-icon {
    border-color: var(--color-border-primary);
  }

  /* Make sure torch aligns with social icons */
  .social-icon-wrapper :global(.torch) {
    width: 32px;
    height: 40px;
    padding: 0;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
  }

  .social-icon-wrapper :global(.torch:hover) {
    opacity: 0.8;
  }
</style>
