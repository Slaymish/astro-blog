---
// Design System
import "../../design-system/tokens.css";
import "../../design-system/base.css";
import "../../design-system/themes/light.css";
import "../../design-system/themes/dark.css";
import "../../styles/globals.css";

// Layout Components
import Footer from "./Footer.astro";
import Header from "./Header.astro";
import {
  SITE_AUTHOR,
  SITE_DESCRIPTION,
  SITE_NAME,
  SITE_URL,
  SOCIAL_PROFILES,
  absoluteUrl,
  canonicalFromAstro
} from "../../lib/site";

interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
  publishedTime?: string;
  modifiedTime?: string;
  tags?: string[];
  author?: string;
  canonicalURL?: string;
}

const { 
  title, 
  description = SITE_DESCRIPTION,
  image = "/images/posts/controller-progress.jpg",
  article = false,
  publishedTime,
  modifiedTime,
  tags = [],
  author = SITE_AUTHOR,
  canonicalURL
} = Astro.props;

const siteTitle = SITE_NAME;
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
const siteURL = Astro.site?.toString() || SITE_URL;
const canonicalHref = canonicalFromAstro(Astro.url, Astro.site, canonicalURL);
const imageURL = absoluteUrl(image, siteURL);
const personId = absoluteUrl("/#person", siteURL);
const websiteId = absoluteUrl("/#website", siteURL);

const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Person",
      "@id": personId,
      "name": SITE_AUTHOR,
      "alternateName": "Slaymish",
      "url": absoluteUrl("/", siteURL),
      "image": absoluteUrl("/apple-touch-icon.png", siteURL),
      "jobTitle": "Software Engineer",
      "sameAs": [...SOCIAL_PROFILES]
    },
    {
      "@type": "WebSite",
      "@id": websiteId,
      "url": absoluteUrl("/", siteURL),
      "name": siteTitle,
      "description": SITE_DESCRIPTION,
      "publisher": { "@id": personId },
      "inLanguage": "en-US"
    },
    article
      ? {
          "@type": "BlogPosting",
          "headline": title,
          "description": description,
          "url": canonicalHref,
          "author": { "@id": personId },
          "publisher": { "@id": personId },
          "image": [imageURL],
          "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": canonicalHref
          },
          ...(publishedTime ? { "datePublished": publishedTime } : {}),
          ...(modifiedTime ? { "dateModified": modifiedTime } : {}),
          ...(tags.length > 0 ? { "keywords": tags.join(", ") } : {})
        }
      : {
          "@type": "WebPage",
          "@id": canonicalHref,
          "url": canonicalHref,
          "name": fullTitle,
          "description": description,
          "isPartOf": { "@id": websiteId },
          "about": { "@id": personId },
          "inLanguage": "en-US"
        }
  ]
};
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Critical inline styles to prevent FOUC - must be first! -->
    <style>
      :root {
        --bg: #ffffff;
        --surface: #f1f3f5;
        --surface-2: #e5e7eb;
        --text: #111827;
        --text-muted: #6b7280;
        --border: #d1d5db;
        --border-strong: #9ca3af;
        --accent: #f652a0;
        --accent-contrast: #ffffff;
        --focus: #f652a0;
      }

      .dark {
        --bg: #0a0a0a;
        --surface: #111827;
        --surface-2: #1f2937;
        --text: #fafbfc;
        --text-muted: #6b7280;
        --border: #374151;
        --border-strong: #4b5563;
        --accent: #f652a0;
        --accent-contrast: #ffffff;
        --focus: #f652a0;
      }

      /* Apply immediately */
      html {
        background-color: var(--bg);
        color: var(--text);
      }

      body {
        background-color: var(--bg);
        color: var(--text);
        margin: 0;
        padding: 0;
      }
    </style>

    <!-- Critical theme initialization script (must be VERY early to prevent FOUC) -->
    <script is:inline>
      (function() {
        try {
          const savedAccent = localStorage.getItem('accent');
          if (savedAccent) {
            document.documentElement.style.setProperty('--accent', savedAccent);
            document.documentElement.style.setProperty('--focus', savedAccent);
          }

          const savedTheme = localStorage.getItem('theme') || 'system';
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          const effectiveTheme = savedTheme === 'system' ? (prefersDark ? 'dark' : 'light') : savedTheme;

          // Apply theme class immediately
          document.documentElement.classList.add(effectiveTheme);
          document.documentElement.setAttribute('data-theme', savedTheme);
        } catch (e) {
          // Fail silently if localStorage is not available
          // Default to system preference
          if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document.documentElement.classList.add('dark');
          } else {
            document.documentElement.classList.add('light');
          }
        }
      })();
    </script>
    
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Basic Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <link rel="canonical" href={canonicalHref} />
    <link rel="alternate" hreflang="en" href={canonicalHref} />
    <link rel="alternate" hreflang="x-default" href={canonicalHref} />
    
    <!-- Google Fonts - optimized with font-display=swap and reduced weights -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={article ? "article" : "website"} />
    <meta property="og:url" content={canonicalHref} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:site_name" content={siteTitle} />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalHref} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />
    <meta name="twitter:site" content="@Slaymishh" />
    <meta name="twitter:creator" content="@Slaymishh" />
    
    <!-- Article-specific meta tags -->
    {article && publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {article && modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    {article && author && <meta property="article:author" content={author} />}
    {article && tags.map(tag => <meta property="article:tag" content={tag} />)}
    
    <!-- Structured Data for LLMs and Search Engines -->
    <script type="application/ld+json" is:inline set:html={JSON.stringify(structuredData)} />
    
    <!-- Breadcrumb Schema for Homepage -->
    {!article && (
      <script type="application/ld+json" is:inline set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [{
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": absoluteUrl("/", siteURL)
          }]
        })} />
    )}
    
    <!-- Additional meta for LLMs -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    
    <!-- Performance and Security -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="theme-color" content="#10b981" />
    <meta name="msapplication-TileColor" content="#10b981" />
    
    <!-- Preconnect to external domains for faster loading -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net" />
    
    <!-- Favicon and Icons -->
    <link rel="icon" type="image/svg+xml" href="/hamish_logo_colourable.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="Hamish's Blog RSS Feed" href="/rss.xml" />
    <link rel="alternate" type="text/plain" title="LLM guidance" href="/llms.txt" />
    
    <!-- KaTeX CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">

    <style is:global>
      *, *::before, *::after {
        box-sizing: border-box;
      }

      html, body {
        overflow-x: hidden;
      }

      .page-wrapper {
        width: 100%;
        max-width: 100%;
        margin: 0 auto;
        padding: 0 var(--padding-mobile);
        box-sizing: border-box;
      }

      @media (min-width: 768px) {
        .page-wrapper {
          padding: 0 var(--padding-tablet);
        }
      }

      @media (min-width: 1024px) {
        .page-wrapper {
          padding: 0 var(--padding-desktop);
        }
      }

      main {
        width: 100%;
        max-width: var(--content-max-width);
        margin: 0 auto;
      }
    </style>
  </head>
  <body class="antialiased" style="background-color: var(--bg); color: var(--text); min-height: 100vh; display: flex; flex-direction: column;">
    <a class="skip-link" href="#main-content">Skip to content</a>

    <div class="page-wrapper">
      <Header />
      <main id="main-content" class="grow py-8 sm:py-12 md:py-16" tabindex="-1">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
