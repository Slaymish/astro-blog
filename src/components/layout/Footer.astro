<style>
  .footer {
    width: 100%;
    border-top: 1px solid var(--border);
    padding: 3rem 0 2rem;
    margin-top: auto;
  }

  .footer-content {
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: 0 var(--padding-mobile);
  }

  @media (min-width: 768px) {
    .footer-content {
      padding: 0 var(--padding-tablet);
    }
  }

  @media (min-width: 1024px) {
    .footer-content {
      padding: 0 var(--padding-desktop);
    }
  }

  .footer-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .footer-link {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.15s ease;
  }

  .footer-link:hover {
    color: var(--accent);
  }

  .footer-link::after {
    display: none;
  }

  .footer-social {
    display: flex;
    gap: 1rem;
  }

  .footer-icon {
    color: var(--text-muted);
    padding: 0.5rem;
    border-radius: var(--radius-md);
    transition: all 0.15s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-icon:hover {
    color: var(--accent);
    background: var(--surface-2);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .footer-copyright p {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  .footer-doodle {
    color: var(--text-muted);
    cursor: pointer;
    transition: all 0.18s ease;
    padding: 0.5rem;
    border-radius: var(--radius-full);
  }

  .footer-doodle:hover {
    color: var(--accent);
    transform: scale(1.1) rotate(-10deg);
    background: var(--surface-2);
  }

  @media (max-width: 640px) {
    .footer-links {
      flex-direction: column;
      align-items: flex-start;
    }

    .footer-nav {
      flex-direction: column;
      gap: 0.75rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
