---
// SVG Pattern Background
---

<div class="svg-background">
  <svg class="floating-shapes" viewBox="0 0 1000 1000" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:var(--color-primary-500);stop-opacity:0.1" />
        <stop offset="100%" style="stop-color:var(--color-accent-500);stop-opacity:0.05" />
      </linearGradient>
      <linearGradient id="grad2" x1="100%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:var(--color-accent2-500);stop-opacity:0.08" />
        <stop offset="100%" style="stop-color:var(--color-primary-600);stop-opacity:0.03" />
      </linearGradient>
    </defs>
    
    <!-- Floating geometric shapes -->
    <circle class="shape-1" cx="150" cy="200" r="40" fill="url(#grad1)" />
    <circle class="shape-2" cx="750" cy="150" r="25" fill="url(#grad2)" />
    <circle class="shape-3" cx="850" cy="600" r="35" fill="url(#grad1)" />
    <circle class="shape-4" cx="200" cy="700" r="20" fill="url(#grad2)" />
    
    <polygon class="shape-5" points="400,100 450,150 400,200 350,150" fill="url(#grad1)" />
    <polygon class="shape-6" points="600,500 650,550 600,600 550,550" fill="url(#grad2)" />
    
    <rect class="shape-7" x="100" y="400" width="30" height="30" rx="5" fill="url(#grad1)" />
    <rect class="shape-8" x="700" y="300" width="25" height="25" rx="3" fill="url(#grad2)" />
    <rect class="shape-9" x="500" y="800" width="35" height="35" rx="4" fill="url(#grad1)" />
  </svg>
</div>

<style>
  .svg-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: -2;
    overflow: hidden;
  }
  
  .floating-shapes {
    width: 100%;
    height: 100%;
    opacity: 0.6;
  }
  
  /* Individual shape animations */
  .shape-1 {
    animation: float-1 20s ease-in-out infinite;
    transform-origin: center;
  }
  
  .shape-2 {
    animation: float-2 25s ease-in-out infinite;
    transform-origin: center;
  }
  
  .shape-3 {
    animation: float-3 18s ease-in-out infinite;
    transform-origin: center;
  }
  
  .shape-4 {
    animation: float-4 22s ease-in-out infinite;
    transform-origin: center;
  }
  
  .shape-5 {
    animation: rotate-float-1 30s linear infinite;
    transform-origin: center;
  }
  
  .shape-6 {
    animation: rotate-float-2 35s linear infinite;
    transform-origin: center;
  }
  
  .shape-7 {
    animation: float-1 16s ease-in-out infinite reverse;
    transform-origin: center;
  }
  
  .shape-8 {
    animation: float-2 24s ease-in-out infinite reverse;
    transform-origin: center;
  }
  
  .shape-9 {
    animation: float-3 28s ease-in-out infinite reverse;
    transform-origin: center;
  }
  
  @keyframes float-1 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(20px, -30px) scale(1.1); }
    50% { transform: translate(-15px, -20px) scale(0.9); }
    75% { transform: translate(25px, 10px) scale(1.05); }
  }
  
  @keyframes float-2 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(-25px, 20px) scale(1.15); }
    66% { transform: translate(30px, -15px) scale(0.85); }
  }
  
  @keyframes float-3 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    20% { transform: translate(15px, 25px) scale(1.2); }
    40% { transform: translate(-20px, -10px) scale(0.8); }
    60% { transform: translate(10px, -25px) scale(1.1); }
    80% { transform: translate(-15px, 15px) scale(0.9); }
  }
  
  @keyframes float-4 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(-30px, 40px) scale(1.3); }
  }
  
  @keyframes rotate-float-1 {
    0% { transform: translate(0, 0) rotate(0deg) scale(1); }
    25% { transform: translate(20px, -20px) rotate(90deg) scale(1.1); }
    50% { transform: translate(-10px, -30px) rotate(180deg) scale(0.9); }
    75% { transform: translate(30px, 15px) rotate(270deg) scale(1.05); }
    100% { transform: translate(0, 0) rotate(360deg) scale(1); }
  }
  
  @keyframes rotate-float-2 {
    0% { transform: translate(0, 0) rotate(0deg) scale(1); }
    33% { transform: translate(-25px, 25px) rotate(120deg) scale(1.15); }
    66% { transform: translate(35px, -20px) rotate(240deg) scale(0.85); }
    100% { transform: translate(0, 0) rotate(360deg) scale(1); }
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .floating-shapes {
      opacity: 0.3;
    }
  }
  
  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .shape-1, .shape-2, .shape-3, .shape-4, 
    .shape-5, .shape-6, .shape-7, .shape-8, .shape-9 {
      animation: none;
    }
  }
</style>
