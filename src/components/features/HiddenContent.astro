<style>
  .contextual-hidden-content {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 1001;
  }

  .contextual-hidden-content .hidden-item {
    position: absolute;
    opacity: 0;
    transform: scale(0.5);
    transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    pointer-events: none;
  }

  .contextual-hidden-content .hidden-item.revealed {
    opacity: 1;
    transform: scale(1);
    animation: contextual-sparkle 0.6s ease-out;
  }

  .contextual-hidden-content .hidden-item.discovered {
    opacity: 0.5;
    transform: scale(0.8);
  }

  @keyframes contextual-sparkle {
    0% { 
      transform: scale(0.5) rotate(0deg);
      filter: brightness(1);
    }
    50% { 
      transform: scale(1.3) rotate(360deg);
      filter: brightness(1.8) drop-shadow(0 0 15px rgba(255, 215, 0, 0.9));
    }
    100% { 
      transform: scale(1) rotate(720deg);
      filter: brightness(1);
    }
  }

  /* Special styling for different types of secrets */
  .programming-secret .hidden-text {
    background: linear-gradient(45deg, 
      rgba(0, 255, 127, 0.9), 
      rgba(50, 205, 50, 0.9));
    border-color: rgba(0, 255, 127, 0.6);
    font-family: var(--font-mono);
  }

  .ai-secret .hidden-text {
    background: linear-gradient(45deg, 
      rgba(138, 43, 226, 0.9), 
      rgba(75, 0, 130, 0.9));
    color: white;
    border-color: rgba(138, 43, 226, 0.6);
  }

  .math-secret .hidden-text {
    background: linear-gradient(45deg, 
      rgba(255, 20, 147, 0.9), 
      rgba(199, 21, 133, 0.9));
    color: white;
    border-color: rgba(255, 20, 147, 0.6);
    font-family: var(--font-mono);
  }

  .fun-secret .hidden-text {
    background: linear-gradient(45deg, 
      rgba(255, 69, 0, 0.9), 
      rgba(255, 140, 0, 0.9));
    border-color: rgba(255, 69, 0, 0.6);
  }

  .interactive-secret .hidden-text {
    background: linear-gradient(45deg, 
      rgba(30, 144, 255, 0.9), 
      rgba(0, 191, 255, 0.9));
    color: white;
    border-color: rgba(30, 144, 255, 0.6);
  }

  .achievement .hidden-text {
    background: linear-gradient(45deg, 
      rgba(255, 215, 0, 0.95), 
      rgba(255, 193, 7, 0.95));
    border-color: rgba(255, 215, 0, 0.8);
    font-weight: 700;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  .blog-meta .hidden-text {
    background: linear-gradient(45deg, 
      rgba(106, 90, 205, 0.9), 
      rgba(123, 104, 238, 0.9));
    color: white;
    border-color: rgba(106, 90, 205, 0.6);
  }

  .dynamic-secret .hidden-text {
    background: linear-gradient(45deg, 
      rgba(72, 61, 139, 0.9), 
      rgba(147, 112, 219, 0.9));
    color: white;
    border-color: rgba(72, 61, 139, 0.6);
  }

  /* Special effects for achievements */
  .achievement.revealed {
    animation: achievement-unlock 1s ease-out;
  }

  @keyframes achievement-unlock {
    0% { 
      transform: scale(0.3);
      opacity: 0;
    }
    30% { 
      transform: scale(1.4);
      opacity: 0.8;
      filter: brightness(2) drop-shadow(0 0 20px gold);
    }
    60% { 
      transform: scale(0.9);
      opacity: 1;
    }
    100% { 
      transform: scale(1);
      opacity: 1;
    }
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .contextual-hidden-content .hidden-text {
      font-size: 0.7rem;
      padding: 5px 8px;
      max-width: 200px;
    }
    
    .contextual-hidden-content .hidden-graphic {
      font-size: 1.3rem;
    }
  }
</style>

<script>
  function initContextualContent() {
    const timeBasedMessage = document.getElementById('time-based-message');
    
    if (timeBasedMessage) {
      const hour = new Date().getHours();
      let message = "Happy exploring!";
      let emoji = "ğŸŒŸ";
      
      if (hour >= 5 && hour < 12) {
        message = "Good morning, explorer!";
        emoji = "ğŸŒ…";
      } else if (hour >= 12 && hour < 17) {
        message = "Good afternoon, adventurer!";
        emoji = "â˜€ï¸";
      } else if (hour >= 17 && hour < 21) {
        message = "Good evening, discoverer!";
        emoji = "ğŸŒ†";
      } else {
        message = "Burning the midnight oil?";
        emoji = "ğŸŒ™";
      }
      
      timeBasedMessage.innerHTML = `${emoji} ${message}`;
    }
    
    // Add some seasonal or date-based content
    const today = new Date();
    const month = today.getMonth();
    const date = today.getDate();
    
    // Add special messages for holidays/seasons
    if (month === 11 && date >= 20) { // Winter
      addSeasonalSecret("â„ï¸ Winter wonderland of code!", "top: 12%; left: 20%;");
    } else if (month >= 2 && month <= 4) { // Spring
      addSeasonalSecret("ğŸŒ¸ Spring cleaning your code?", "top: 18%; right: 30%;");
    } else if (month >= 5 && month <= 7) { // Summer
      addSeasonalSecret("â˜€ï¸ Summer coding sessions!", "top: 22%; left: 80%;");
    } else if (month >= 8 && month <= 10) { // Fall
      addSeasonalSecret("ğŸ‚ Falling leaves, rising code!", "top: 88%; left: 15%;");
    }
  }
  
  function addSeasonalSecret(text: string, position: string) {
    const contextualContainer = document.querySelector('.contextual-hidden-content');
    if (!contextualContainer) return;
    
    const seasonalItem = document.createElement('div');
    seasonalItem.className = 'hidden-item seasonal-secret';
    seasonalItem.setAttribute('data-reveal-distance', '75');
    seasonalItem.style.cssText = `position: absolute; ${position}`;
    seasonalItem.innerHTML = `<div class="hidden-text">${text}</div>`;
    
    contextualContainer.appendChild(seasonalItem);
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initContextualContent);
  } else {
    initContextualContent();
  }
</script>
