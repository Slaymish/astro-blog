---
/**
 * Studio Layout
 * Isolated layout for the philosophy section
 * Zero dependency on main site styles
 */

// Import the design system CSS
import './design.css';

interface Props {
  title: string;
  subtitle?: string;
  palette?: 'noir' | 'sepia' | 'forest' | 'ocean' | 'ember';
  motion?: 'subtle' | 'moderate' | 'expressive';
}

const { 
  title, 
  subtitle,
  palette = 'noir',
  motion = 'subtle'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} — Studio</title>
  
  <!-- Preload critical fonts -->
  <link rel="preload" as="font" type="font/woff2" crossorigin>
  
  <!-- Metadata -->
  <meta name="description" content={subtitle || title}>
  <meta name="robots" content="index, follow">
  
  <!-- Inline critical CSS to prevent FOUC -->
  <style is:inline>
    html, body {
      margin: 0;
      padding: 0;
      background-color: #0a0a0a;
      color: #e8e8e8;
    }
  </style>
  
  <!-- No favicon inheritance - studio is separate -->
  <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>◆</text></svg>">
</head>
<body class={`studio-root studio-palette-${palette} studio-motion-${motion}`}>
  <div class="studio-container">
    <!-- Header -->
    <header class="studio-header">
      <nav class="studio-nav" aria-label="Studio navigation">
        <a href="/studio" class="studio-nav-logo">◆</a>
        <div class="studio-nav-links">
          <a href="/studio" class="studio-nav-link">Essays</a>
          <a href="/studio/about" class="studio-nav-link">About</a>
          <a href="/" class="studio-nav-exit" aria-label="Exit to main site">×</a>
        </div>
      </nav>
    </header>

    <!-- Main content -->
    <main class="studio-main">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="studio-footer">
      <div class="studio-footer-content">
        <p class="studio-footer-text">
          Studio — A space for thinking
        </p>
        <p class="studio-footer-meta">
          <a href="/studio/about" class="studio-footer-link">About</a>
          <span class="studio-footer-sep">·</span>
          <a href="/" class="studio-footer-link">Main site</a>
        </p>
      </div>
    </footer>
  </div>

  <style>
    /* Container */
    .studio-container {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* Header */
    .studio-header {
      padding: var(--studio-space-6) var(--studio-space-6) var(--studio-space-4);
      border-bottom: 1px solid var(--studio-border);
      position: sticky;
      top: 0;
      background-color: var(--studio-bg-primary);
      backdrop-filter: blur(10px);
      z-index: 100;
    }

    .studio-nav {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .studio-nav-logo {
      font-size: var(--studio-text-2xl);
      color: var(--studio-text-primary);
      text-decoration: none;
      transition: transform var(--studio-duration-normal) var(--studio-ease-out);
      display: block;
      line-height: 1;
    }

    .studio-nav-logo:hover {
      transform: rotate(45deg);
    }

    .studio-nav-links {
      display: flex;
      gap: var(--studio-space-6);
      align-items: center;
    }

    .studio-nav-link {
      font-family: var(--studio-font-sans);
      font-size: var(--studio-text-sm);
      color: var(--studio-text-muted);
      text-decoration: none;
      letter-spacing: var(--studio-tracking-wide);
      text-transform: uppercase;
      transition: color var(--studio-duration-normal) var(--studio-ease-out);
      border: none;
    }

    .studio-nav-link:hover {
      color: var(--studio-text-primary);
    }

    .studio-nav-exit {
      font-size: var(--studio-text-3xl);
      color: var(--studio-text-muted);
      text-decoration: none;
      line-height: 1;
      transition: all var(--studio-duration-normal) var(--studio-ease-out);
      display: block;
      border: none;
    }

    .studio-nav-exit:hover {
      color: var(--studio-text-primary);
      transform: rotate(90deg);
    }

    /* Main */
    .studio-main {
      flex: 1;
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: var(--studio-space-16) var(--studio-space-6) var(--studio-space-24);
    }

    @media (max-width: 768px) {
      .studio-main {
        padding: var(--studio-space-12) var(--studio-space-4) var(--studio-space-16);
      }
    }

    /* Footer */
    .studio-footer {
      border-top: 1px solid var(--studio-border);
      padding: var(--studio-space-8) var(--studio-space-6);
      margin-top: var(--studio-space-16);
    }

    .studio-footer-content {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: var(--studio-space-4);
    }

    .studio-footer-text {
      font-family: var(--studio-font-sans);
      font-size: var(--studio-text-sm);
      color: var(--studio-text-muted);
      letter-spacing: var(--studio-tracking-wide);
    }

    .studio-footer-meta {
      font-family: var(--studio-font-sans);
      font-size: var(--studio-text-sm);
      color: var(--studio-text-muted);
      display: flex;
      gap: var(--studio-space-3);
      align-items: center;
    }

    .studio-footer-link {
      color: var(--studio-text-muted);
      text-decoration: none;
      transition: color var(--studio-duration-normal) var(--studio-ease-out);
      border: none;
    }

    .studio-footer-link:hover {
      color: var(--studio-text-primary);
    }

    .studio-footer-sep {
      color: var(--studio-border);
    }

    @media (max-width: 640px) {
      .studio-footer-content {
        flex-direction: column;
        text-align: center;
      }
    }
  </style>
  <!-- Studio interactivity bundle -->
  <script src="/studio/studio-interactions.js" defer></script>
</body>
</html>
